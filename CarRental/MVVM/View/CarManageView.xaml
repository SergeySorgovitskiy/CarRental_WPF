<UserControl x:Class="CarRental.MVVM.View.CarManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarRental.MVVM.View"
             xmlns:viewmodel="clr-namespace:CarRental.MVVM.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    

        <UserControl.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#252A37"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Верхняя строка для кнопок -->
            <RowDefinition Height="Auto"/>

            <!-- Остальное пространство для отображения карточек -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопками -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Width="100" Height="25" Content="Add" Margin="20" Command="{Binding AddCarCommand}" Style="{StaticResource ButtonStyle}"/>
            <TextBlock Margin="100,0,0,0" Text="Cars Management" FontSize="20" Foreground="White" FontWeight="Medium"/>
        </StackPanel>

        <!-- Область для отображения карточек -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Cars}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="650" Height="100" Background="#252A37" CornerRadius="15" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                                <!-- Область с фото -->
                                <Image Source="{Binding ImagePath}" Width="110" Height="50"/>
                                <!-- Бренд и модель -->
                                <StackPanel Margin="0,10,30,10" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Brand}" FontSize="14" Foreground="White" TextTrimming="WordEllipsis"/>
                                    <TextBlock Text="{Binding Model}" FontSize="14" Foreground="White" TextTrimming="WordEllipsis"/>
                                </StackPanel>
                                <!-- Год выпуска -->
                                <StackPanel Margin="0,10,30,10" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Year}" FontSize="14" Foreground="White" TextTrimming="WordEllipsis"/>
                                    <TextBlock Text="{Binding BodyType}" FontSize="14" Foreground="White" TextTrimming="WordEllipsis"/>
                                </StackPanel>
                                <!-- Описание -->
                                <TextBlock Text="{Binding Description}" FontSize="7" Foreground="White" TextWrapping="Wrap" Margin="0,10,22,10" VerticalAlignment="Center" MaxWidth="200"/>
                                <!-- Price -->
                                <TextBlock Text="{Binding Price}" FontSize="14" Foreground="White" TextTrimming="WordEllipsis" Margin="0,10,22,10" VerticalAlignment="Center"/>
                                <StackPanel Margin="0,10,30,10" VerticalAlignment="Center">
                                    <Button Width="100" Height="25" Content="Edit" Margin="-10,10,10,5" Command="{Binding DataContext.EditCarCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" Style="{StaticResource ButtonStyle}"/>
                                    <Button Width="100" Height="25" Content="Delete" Margin="-10,10,10,5" Command="{Binding DataContext.DeleteCarCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}" Style="{StaticResource ButtonStyle}"/>
                                </StackPanel>
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="CarRental.MVVM.View.StatisticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarRental.MVVM.View" 
             xmlns:viewmodel="clr-namespace:CarRental.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:StatisticViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#0A0F1D">
    <Grid>
        <!-- CarRental Logo -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="CarRental" FontSize="36" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Fleet Statistics" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,20"/>
        </StackPanel>

        <!-- Statistics -->
        <StackPanel Margin="40,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding TotalCars, StringFormat='Total number of cars: {0}'}" FontSize="18" Foreground="White" Margin="40,30,0,0"/>
            <TextBlock Text="{Binding TotalUsers, StringFormat='Total number of users: {0}'}" FontSize="18" Foreground="White" Margin="40,30,0,0"/>
            <TextBlock Text="{Binding ActiveBookings, StringFormat='Total number of active bookings: {0}'}" FontSize="18" Foreground="White" Margin="40,30,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>

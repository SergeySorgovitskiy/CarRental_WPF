<Window x:Class="CarRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental"
        mc:Ignorable="d"
        Title="CarRental" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        xmlns:viewModel="clr-namespace:CarRental.MVVM.ViewModel">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:AdminButtonsVisibilityConverter x:Key="AdminButtonsVisibilityConverter"/>

        <Style x:Key="NoHighlightButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#0A0F1D" CornerRadius="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0" Grid.Column="1">

                <Button Content="Log out" Grid.Row="0" Grid.Column="0" Margin="0,0,30,0" Command="{Binding LogoutCommand}" Style="{StaticResource NoHighlightButtonStyle}" Foreground="White" FontWeight="Bold" BorderThickness="0" Background="Transparent"/>

                <Button Margin="5" Command="{Binding MinimizeApplicationCommand}" Style="{StaticResource NoHighlightButtonStyle}" Visibility="Visible">
                    <Button.Content>
                        <Image Width="15" Source="./Photo/icons/minimize.png" />
                    </Button.Content>
                </Button>
                <Button Margin="10" Command="{Binding CloseApplicationCommand}" Style="{StaticResource NoHighlightButtonStyle}" Visibility="Visible">
                    <Button.Content>
                        <Image Width="15" Source="./Photo/icons/close.png" />
                    </Button.Content>
                </Button>
                
            </StackPanel>

            <TextBlock Visibility="{Binding IsMainViewVisible, Converter={StaticResource BoolToVisibilityConverter}}" Text="CarRental" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="22"/>

            <StackPanel Grid.Row="3">
                <RadioButton Command="{Binding HomeViewCommand}" IsChecked="True" Content="Cars" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"
                             Visibility="{Binding IsMainViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <RadioButton Command="{Binding BookingsViewCommand}" Content="Bookings" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}"
                             Visibility="{Binding IsMainViewVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <RadioButton Command="{Binding StatisticViewCommand}" Content="Statistic" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" 
                             Visibility="{Binding IsAdmin, Converter={StaticResource AdminButtonsVisibilityConverter}}"/>
                <RadioButton Command="{Binding CarManageViewCommand}" Content="Car Management" Height="50" Foreground="White" FontSize="14" 
                             Style="{StaticResource MenuButtonTheme}" 
                             Visibility="{Binding IsAdmin, Converter={StaticResource AdminButtonsVisibilityConverter}}"/>
            </StackPanel>
            <Border Visibility="{Binding IsMainViewVisible, Converter={StaticResource BoolToVisibilityConverter}}" Background="#252A37" BorderThickness="0" CornerRadius="15" Width="400" Height="40" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="1">
                <TextBox Background="Transparent" 
             Width="380" 
             Height="30" 
             VerticalContentAlignment="Center" 
             HorizontalContentAlignment="Left" 
             Foreground="White"
             FontSize="12"
             BorderThickness="0"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Foreground" Value="#808080"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Border>




            <ContentControl Grid.Row="1" Grid.Column="1" Margin="10" Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>
